<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.mapper.CommunityMapper">
    <insert id="insertCommunity_Details" parameterType="Community_Details">
        insert into community_details_temp values(#{uid},#{uname},#{community_id},#{title},#{content},0,#{href},0,#{root_communityID},#{to_communityID},#{update_time});
    </insert>

    <select id="getTotalHotCommunity">
        select gid,group_name,href from community order by total_times desc
        OFFSET 0 ROW
            FETCH NEXT 8 ROWS ONLY
    </select>

    <select id="getGroup" resultType="Group">
        select * from community;
    </select>

</mapper>