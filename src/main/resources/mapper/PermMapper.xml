<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.mapper.PermMapper">
    <select id="getAuthority" resultType="Permissions">
        select * from authorities where role=(select role from user_role where uid=#{uid})
    </select>

</mapper>