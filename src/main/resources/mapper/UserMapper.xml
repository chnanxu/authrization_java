    <select id="findAll" resultType="User">
        select uid,s.username,password,enabled,authority from users s left join authorities a on s.username=a.username
    </select>

    <select id="regist" parameterType="User" resultType="User">
        insert into users values (#{uid},#{username},#{password},1)
    </select>


</mapper>