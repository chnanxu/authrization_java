<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chen.mapper.UserMapper">

    <select id="findUserItem" resultType="UserItem">
        select * from user_item
    </select>

    <select id="findByName" resultType="User">
        select * from users where username=#{username}
    </select>

    <select id="findUserInfo" resultType="UserInfo">
        select * from user_info where uid=#{uid}
    </select>

    <select id="findByUnameAndPwd" parameterType="java.lang.String" resultType="User">
        select * from users where username=#{username} and password=#{password}
    </select>

    <update id="updateUserImg" parameterType="java.lang.String" >
        update user_info set user_img=#{user_img} where uid=#{uid}
    </update>

    <update id="updateUserInfo" parameterType="UserInfo">
        update user_info set uname=#{uname},sex=#{sex},email=#{email} where uid=#{uid};
        update item_comments set uname=#{uname} where uid=#{uid};
        update item_details set uname=#{uname} where uid=#{uid}
    </update>

    <select id="findAll" resultType="QueryUserResult">
        SELECT
            s.uid,
            s.username,
            enabled,
            r.role
        FROM
            users s
                LEFT JOIN user_role ur ON s.uid = ur.uid
                LEFT JOIN role r ON ur.role_id=r.role_id
    </select>

    <insert id="regist" parameterType="User" >
        insert into users values (#{uid},#{username},#{password},1);
    </insert>

    <insert id="regInfo" parameterType="User">
        insert into user_info values (#{uid},#{uname},#{sex},#{email},#{user_img},#{signDate})
    </insert>

    <insert id="addUserComment" parameterType="UserLikeComment">
        insert into user_likecomments values (#{uid},#{pid},#{comment_id})
    </insert>


</mapper>